// inboxページの空メッセージ
.p-empty-message
  position fixed
  width 210px
  top 50%
  left 50%
  transform translate(-50%, -50%)
  text-align center
  &__image
    margin 0 0 20px 0
  &__text
    letter-spacing 3px
  .p-onboard
    a
      padding 10px
      display block
      text-decoration underline
      color blue

// inbox リスト
.p-inbox-list
  &__item
    height 130px
    position relative
    &:before
      content ''
      position absolute
      bottom 0
      left 0
      width 100%
      height 70px
      background-image linear-gradient(-180deg, rgba(0,0,0,0.00) 0%, #000000 120%)
    .p-check-button
      position absolute
      top 10px
      left 10px

// inbox 映画情報
.p-inbox-movie
  &__image
    object-fit cover
    width 100%
    height 130px
  &__info
    position absolute
    bottom 10px
    right 10px
    text-align right
    width 80%
    &__title
      letter-spacing 1.5px
      margin 0 0 0 auto
    &__sub
      color gray
      font-size 10px
      &--data
        margin: 0 0 0 5px

// inbox 検索ボタン
.p-search-wrapper
  position fixed
  z-index 1
  bottom 25px
  right 25px
  cursor pointer
  transition all 300ms cubic-bezier(0.175, 0.885, 0.32, 1.275)
  width 50px
  height 50px
  background blue
  border-radius 50%
  box-shadow 0 0 4px rgba(0, 0, 0, 0.5)
  &:before
    content ''
    position absolute
    top 13px
    right 14px
    width 23px
    height 23px
    background url('../images/icon/search.svg') center /cover no-repeat
  &__input
    width 0
    transform scale(0)
    &::placeholder
      color white

.focused
  width 250px
  border-radius 40px
  .p-search-wrapper__input
    width 250px
    height 48px
    padding 0 0 0 20px
    transform scale(1)
