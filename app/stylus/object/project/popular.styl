.p-popular-movie
  margin 20px
  &__title
    text-align center
    margin 0 0 20px

.p-popular-movie__list
  margin 0 0 10px 0
  &__item
    margin 0 0 16px 0
    &:last-child
      margin 0 auto 0 5%
    &__title
      font-size 10px
      line-height 13px
      letter-spacing 0.5px
    &__image
      object-fit cover
      width 100%
      border-radius 2px
      margin 0 0 5px 0
      box-shadow 0 0 10px rgba(0, 0, 0, 0.6)

.p-popular-movie__page
  display flex
  margin 0 20px 0
  &__item
    width 50%
    margin 0 20px 0 0
    text-align right
    &:last-child
      margin 0 0 0 20px
      text-align left
