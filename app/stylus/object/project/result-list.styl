.p-search-result
  &__title
    text-align center
    margin 0 0 20px 0

.p-result-list
  padding 0 20px 0 20px
  &__item
    position relative
    margin 0 0 20px 0
    &__image
      border-radius 2px
      margin 0 0 8px 0
      box-shadow 0 0 9px rgba(0, 0, 0, 0.6)
    &__title
      font-size 13px
      margin 0 0 1px 0
      lineControl()
    &__info
      font-size 11px
      color #A1A2A3
      lineControl()
