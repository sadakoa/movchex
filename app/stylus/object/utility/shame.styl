.splash-image
  position absolute
  z-index 20

.p-push
  position fixed
  color white
  bottom 0
  z-index 1
  padding 11px 0 0 0
  width 100%
  height 70px
  background rgba(0, 0, 0, 0.5)
  +pc()
    width 375px
    margin 0 auto

// adaptive backgrounds js スタイル
// 画像が明るい時は文字やborderを暗くする
.ab-light .p-movie-info__block__genre,
.ab-light .p-movie-info__block__data
  color #595959

.ab-light h2
  color #000

.ab-light .p-movie-overview,
.ab-light .p-movie-relation
  color #000
  border-bottom 1px solid rgba(0, 0, 0, 0.2)

// テンプレート変数を隠すスタイル
[v-cloak] {
  opacity 0
}

// 利用規約やプライバシーポリシーのページ用スタイル
.p-side-section
  margin 0 20px 20px
  &:first-child
    margin 20px
  &__title
    margin 0 0 3px 0
  &__text
    font-size 10px
    letter-spacing 0.5px
    line-height: 15px
    color gray
