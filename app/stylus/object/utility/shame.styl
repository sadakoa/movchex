// inboxページの空メッセージ
.p-empty-message
  position absolute
  width 210px
  top 50%
  left 50%
  transform translate(-50%, -50%)
  text-align center
  &__image
    margin 0 0 30px 0

.splash-image
  position absolute
  z-index 20

.p-push
  position fixed
  color white
  bottom 0
  z-index 1
  padding 11px 0 0 0
  width 100%
  height 70px
  background rgba(0, 0, 0, 0.5)
  +pc()
    width 375px
    margin 0 auto

// adaptive backgrounds js スタイル
// 画像が明るい時は文字やborderを暗くする
.ab-light .p-movie-info__block__genre,
.ab-light .p-movie-info__block__data
  color #808080

.ab-light .p-movie-overview,
.ab-light .p-movie-relation
  border-bottom 1px solid rgba(0, 0, 0, 0.2)
