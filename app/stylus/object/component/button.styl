// ハンバーガーボタン
.c-nav-button
  position absolute
  z-index 3
  top 2px
  right 10px
  width 25px
  display block
  padding 20px 35px 20px 10px
  transition all 200ms ease-in-out
  &__line
    width 25px
    height 2px
    display block
    border-radius 4px
    background white
    transition all 200ms ease-in-out
    &:first-child
      margin: 0 0 11px 0

// 開いた時のスタイル
.c-nav-button.open
  top 7px
  .c-nav-button__line
    &:first-child
      transform rotate(45deg)
    &:last-child
      margin: -13px 0 0 0
      transform rotate(-45deg)

// 追加ボタン
.p-add-button
  position fixed
  z-index 1
  bottom 25px
  right 25px

.c-button
  display block
  margin 0 auto
  width 200px
  height 50px
  line-height 50px
  text-align: center
  border-radius 30px
  font-size 16px
  letter-spacing 2px
  transition all 300ms ease-in-out

.is-primary
  background blue
