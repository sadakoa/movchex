// ヘッダーのレイアウト
.l-header
  width 100%
  height 60px
  border-bottom 1px solid #646464
  position fixed
  z-index 2
  &:before
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 60px
    z-index -1
    background-image linear-gradient(-180deg, #000000 -20%, rgba(0,0,0,0) 120%)
  .p-header-logo
    position absolute
    top 9px
    left 12px
    display block
  .p-page-title
    padding 20px 0 0 0
    text-align center
    font-size 14px
    letter-spacing 3px
    font-weight 300

.common-header
  border-bottom none
  &:before
    display none

.l-work-header
  border-bottom none
