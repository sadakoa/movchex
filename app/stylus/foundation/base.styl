// Color variable
yellow = #FFCA28
blue   = #1F86EB
green  = #009688
red    = #E91E63
gray   = #DADDE0
black  = #333333
white  = #ffffff

// Media Query
pc()
  @media all and (min-width: 769px)
    {block}
sp()
  @media all and (max-width: 768px)
    {block}

// Font variable
baseFontFamily = 'Lato', YuGothic, '游ゴシック', 'ヒラギノ角ゴ Pro W3' , 'Hiragino Kaku Gothic Pro' , 'Meiryo UI' , 'メイリオ' , Meiryo , 'ＭＳ Ｐゴシック' , 'MS PGothic' , sans-serif
baseFontSize   = 14px
baseFontMargin = 1px

body
  font-family baseFontFamily
  font-size baseFontSize
  letter-spacing baseFontMargin
  background #0F0F0F
  color white
  -webkit-font-smoothing antialiased
  -webkit-overflow-scrolling: touch
  word-wrap: break-word
  ul
    list-style none
  a
    text-decoration none
    color white
  img
    max-width 100%
    height auto


.app
  width 100%
  height 100vh
  &:before
    content ''
    position fixed
    top 0
    left 0
    width 100vw
    height 100vh
    background #0F0F0F center center /cover no-repeat
    background-image url('../images/background/app-bg.png')

#inbox-main
  height 100vh
